{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "outDir": "./dist",

        "esModuleInterop": true,
        "skipLibCheck": true,

        "downlevelIteration":true,
        "importHelpers": true,

        "removeComments":true,

        "strict":true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis":true
    },
    "include": ["./src/**/*"]
  }